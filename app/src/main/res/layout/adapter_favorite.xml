<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    android:id="@+id/cardFav">

    <LinearLayout
        android:layout_margin="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/urlIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/url"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="@drawable/darker_grey_oval"
            android:layout_gravity="center"
            app:tint="@color/blueLight"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvContextFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="here is url"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/tvDateFav"
                android:layout_centerVertical="true"
                android:textStyle="normal"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/lightgrey"
                android:text="13 November 2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/arrowRightFav"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow"
                app:tint="@color/lightgrey"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:focusable="true"/>
        </RelativeLayout>


